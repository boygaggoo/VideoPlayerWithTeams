<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/oneTwenty_dp"
    android:layout_height="@dimen/oneTwenty_dp"
    android:layout_marginLeft="@dimen/five_dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center"
    app:cardElevation="@dimen/three_dp"
    app:cardBackgroundColor="@color/white_transparent"
    app:cardCornerRadius="@dimen/fifteen_dp"
    android:orientation="vertical">

    <LinearLayout
        android:gravity="center"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:src="@drawable/ic_football_player"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <com.example.videoplayerwithteams.customeviews.VerdanaTextView
            android:layout_marginTop="@dimen/fifteen_dp"
            android:textAlignment="center"
            android:id="@+id/tvPlayerName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </LinearLayout>




</android.support.v7.widget.CardView>